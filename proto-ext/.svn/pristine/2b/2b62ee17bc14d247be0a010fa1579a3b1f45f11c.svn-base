
body,html{width:100%;height:100%;padding:0;margin:0;}
#main{
   color: #fff;
   font-family:Monospace;
   font-size:13px;
   background-color: #050505;
   float: right;
   position: absolute;
   top:100px;
   bottom: 38px;
   right: 0;
   left: 50%;
   overflow: hidden;
}
.sidebar{
   color: #fff;
   font-family:Monospace;
   font-size:13px;
   background-color: #050505;
   width: 50%;
   float: left;
   position: absolute;
   top:100px;
   bottom: 38px;
   overflow: hidden;
}
#footer{
   color: #fff;
   font-family:Monospace;
   font-size:15px;
   background-color: #050505;
   width:100%;
   height: 38px;
   bottom:0;
   position:absolute;
}
#header{
   color: #fff;
   font-family:Monospace;
   font-size:13px;
   background-color: #050505;
   width:100%;
   height: 100px;
}
#dragbar{
   background-color: gray;
   height:100%;
   float: right;
   width: 6px;
   cursor: col-resize;
}
#editor { 
   font-size:20px;
   position: absolute;
   top: 0;
   right: 0;
   bottom: 0;
   left: 0;
}
#container {
   position: absolute;
   top: 0;
   right: 0;
   bottom: 0;
   left: 0;
   height: 99%;
   width: 99%;
}
